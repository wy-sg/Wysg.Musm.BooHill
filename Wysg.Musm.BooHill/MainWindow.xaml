<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Wysg.Musm.BooHill.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wysg.Musm.BooHill"
    xmlns:converters="using:Wysg.Musm.BooHill"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="부유한 언덕(아파트 전용)">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" RowDefinitions="Auto,*" Loaded="MainWindow_OnLoaded">
        <Grid.Resources>
            <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </Grid.Resources>
        <StackPanel Spacing="12" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="부유한 언덕(아파트 전용)" FontSize="24" FontWeight="SemiBold" />
                <Button Content="Open Admin" Click="OpenAdmin_Click" Visibility="Collapsed" />
                <Button Content="한꺼번에 가져오기" Click="OpenBulkImport_Click" />
            </StackPanel>
            <TextBlock Text="필터" FontSize="18" FontWeight="SemiBold" />
            <Grid ColumnSpacing="8" RowSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="2">
                    <TextBlock Text="단지" FontSize="12" />
                    <ComboBox x:Name="ClusterCombo" PlaceholderText="전체" MinWidth="120" ItemsSource="{Binding Clusters}" DisplayMemberPath="Display" SelectedValuePath="ClusterId" />
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="1">
                    <TextBlock Text="동" FontSize="12" />
                    <Button x:Name="BuildingFilterButton" Content="전체" MinWidth="80">
                        <Button.Flyout>
                            <Flyout x:Name="BuildingFlyout" Closed="BuildingFlyout_Closed">
                                <ListView x:Name="BuildingFilterList" SelectionMode="Multiple" MaxHeight="300" MinWidth="120" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="2">
                    <TextBlock Text="호수" FontSize="12" />
                    <Button x:Name="UnitFilterButton" Content="전체" MinWidth="80">
                        <Button.Flyout>
                            <Flyout x:Name="UnitFlyout" Closed="UnitFlyout_Closed">
                                <ListView x:Name="UnitFilterList" SelectionMode="Multiple" MaxHeight="300" MinWidth="120" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="3">
                    <TextBlock Text="평수" FontSize="12" />
                    <Button x:Name="AreaFilterButton" Content="전체" MinWidth="80">
                        <Button.Flyout>
                            <Flyout x:Name="AreaFlyout" Closed="AreaFlyout_Closed">
                                <ListView x:Name="AreaFilterList" SelectionMode="Multiple" MaxHeight="300" MinWidth="120" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="4">
                    <TextBlock Text="감평액" FontSize="12" />
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBox x:Name="MinValueBox" PlaceholderText="최소" InputScope="Number" Width="60" />
                        <TextBlock Text="~" VerticalAlignment="Center" />
                        <TextBox x:Name="MaxValueBox" PlaceholderText="최대" InputScope="Number" Width="60" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="5">
                    <TextBlock Text="순위" FontSize="12" />
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBox x:Name="MinRankBox" PlaceholderText="최소" InputScope="Number" Width="60" />
                        <TextBlock Text="~" VerticalAlignment="Center" />
                        <TextBox x:Name="MaxRankBox" PlaceholderText="최대" InputScope="Number" Width="60" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Spacing="2" Grid.Column="6">
                    <TextBlock Text="태그" FontSize="12" />
                    <Button x:Name="TagFilterButton" Content="전체" MinWidth="80">
                        <Button.Flyout>
                            <Flyout x:Name="TagFlyout" Closed="TagFlyout_Closed">
                                <ListView x:Name="TagFilterList" SelectionMode="Multiple" MaxHeight="300" MinWidth="120" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <StackPanel Spacing="4" Grid.Column="7" VerticalAlignment="Bottom">
                    <CheckBox x:Name="FavoriteOnlyCheck" Content="관심" />
                </StackPanel>

                <StackPanel Spacing="4" Grid.Column="8" VerticalAlignment="Bottom">
                    <CheckBox x:Name="ShowSoldCheck" Content="거래" />
                </StackPanel>

                <StackPanel Spacing="8" Grid.Column="9" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="적용" Click="ApplyFilters_Click" />
                    <Button Content="초기화" Click="ClearFilters_Click" />
                </StackPanel>

                <TextBlock x:Name="StatusText" Grid.Column="11" VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>
            <TextBlock Text="정렬" FontSize="18" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="6">
                <Button x:Name="SortBuildingBtn" Content="동" MinWidth="50" Click="SortColumn_Click" Tag="Building" />
                <Button x:Name="SortUnitBtn" Content="호수" MinWidth="50" Click="SortColumn_Click" Tag="Unit" />
                <Button x:Name="SortAreaBtn" Content="평" MinWidth="50" Click="SortColumn_Click" Tag="Area" />
                <Button x:Name="SortFavoriteBtn" Content="관심" MinWidth="50" Click="SortColumn_Click" Tag="Favorite" />
                <Button x:Name="SortOfficeBtn" Content="부동산" MinWidth="60" Click="SortColumn_Click" Tag="Office" />
                <Button x:Name="SortPriceBtn" Content="가격 범위" MinWidth="80" Click="SortColumn_Click" Tag="PriceRange" />
                <Button x:Name="SortStatusBtn" Content="상태" MinWidth="50" Click="SortColumn_Click" Tag="Status" />
                <Button x:Name="SortValueBtn" Content="감평액" MinWidth="60" Click="SortColumn_Click" Tag="Value" />
                <Button x:Name="SortRankBtn" Content="순위" MinWidth="50" Click="SortColumn_Click" Tag="Rank" />
                <Button x:Name="SortSoldBtn" Content="거래 완료" MinWidth="80" Click="SortColumn_Click" Tag="Sold" />
                <Button Content="정렬 초기화" Click="ClearSort_Click" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Padding="16">
            <Grid RowDefinitions="Auto,*" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1">
                <Grid Padding="12" ColumnSpacing="8" VerticalAlignment="Center" Background="{ThemeResource LayerFillColorAltBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="93" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="ID" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="동" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="호수" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Text="평" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Text="관심" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Text="부동산" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" Text="가격 범위" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Text="상태" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" Text="감평액" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Center" Text="순위" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="10" VerticalAlignment="Center" HorizontalAlignment="Center" Text="태그" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="11" VerticalAlignment="Center" HorizontalAlignment="Center" Text="거래 완료" FontWeight="SemiBold" />
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <ListView x:Name="HouseList" ItemsSource="{Binding Houses}" SelectionMode="None" HorizontalContentAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Expander Expanding="HouseExpander_Expanding" Collapsed="HouseExpander_Collapsed" HorizontalAlignment="Stretch">
                                    <Expander.Header>
                                        <Grid Padding="0" ColumnSpacing="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="300" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding HouseId}" />
                                            <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding BuildingNumber}" />
                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding UnitNumber}" />
                                            <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Area}" />
                                            <Button Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding FavoriteGlyph}" Click="Favorite_Click" Tag="{Binding HouseId}" />
                                            <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding OfficeGroupCount}" />
                                            <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Text="{Binding PriceRange}" />
                                            <StackPanel Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding StatusText}" Foreground="DodgerBlue" Visibility="{Binding HasStatusText, Converter={StaticResource BoolToVisibility}}" />
                                                <Ellipse Width="10" Height="10" Fill="{Binding StatusCircleColor}" Visibility="{Binding ShowStatusCircle, Converter={StaticResource BoolToVisibility}}" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ValueDisplay}" />
                                            <TextBlock Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding RankDisplay}" />
                                            <TextBlock Grid.Column="10" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Tags}" TextTrimming="CharacterEllipsis" />
                                            <Button Grid.Column="11" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding SoldGlyph}" Click="Sold_Click" Tag="{Binding HouseId}" />
                                        </Grid>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding ItemsForDisplayGroups}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <Border Background="{Binding StatusColor}" Padding="8" Margin="0,4,0,4" CornerRadius="4">
                                                        <TextBlock Text="{Binding Office}" FontWeight="SemiBold" />
                                                    </Border>
                                                    <ItemsControl ItemsSource="{Binding Items}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Padding="12,4" ColumnSpacing="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="80" />
                                                                        <ColumnDefinition Width="120" />
                                                                        <ColumnDefinition Width="140" />
                                                                        <ColumnDefinition Width="140" />
                                                                        <ColumnDefinition Width="140" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="{Binding ItemId}" />
                                                                    <TextBlock Grid.Column="1" Text="{Binding PriceDisplay}" />
                                                                    <TextBlock Grid.Column="2" Text="{Binding Office}" />
                                                                    <TextBlock Grid.Column="3" Text="{Binding AddedDate}" />
                                                                    <TextBlock Grid.Column="4" Text="{Binding LastUpdatedDate}" />
                                                                    <TextBlock Grid.Column="5" Text="{Binding Remark}" TextWrapping="Wrap" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
