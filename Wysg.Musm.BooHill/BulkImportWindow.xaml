<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Wysg.Musm.BooHill.BulkImportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="한꺼번에 가져오기">

    <Grid RowDefinitions="Auto,*" Padding="16">
        <!-- Title Row -->
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="한꺼번에 가져오기" FontSize="24" FontWeight="SemiBold" />
            <Button Content="(1) 시뮬레이션" Click="ParseButton_Click" />
            <Button Content="(3) 기존 매물 가져오기" Click="ImportDuplicates_Click" />
            <Button Content="(4) 새 매물 가져오기" Click="FinalizeNew_Click" />
            <Button Content="초기화" Click="ClearButton_Click" />
            <TextBlock x:Name="SummaryText" VerticalAlignment="Center" Margin="12,0,0,0" />
        </StackPanel>

        <!-- Content Grid -->
        <Grid Grid.Row="1" ColumnSpacing="12" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="260" />
                <RowDefinition Height="260" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Input Section [Row 0, Col 0] -->
            <Grid Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="붙여넣기" FontWeight="SemiBold" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="InputBox" PlaceholderText="여기에 붙여넣기 하세요"
                             AcceptsReturn="True" TextWrapping="Wrap" Height="200"
                             VerticalAlignment="Top" />
                </ScrollViewer>
            </Grid>

            <!-- Duplicates Section [Row 0, Col 1] -->
            <Grid Grid.Column="1"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="기존 주택" FontWeight="SemiBold" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="DuplicatesList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Display}" Foreground="Red" Padding="8" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>

            <!-- Log Section [Row 0, Col 2] -->
            <Grid Grid.Column="2"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="Debug log" FontWeight="SemiBold" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogBox" IsReadOnly="True" AcceptsReturn="True"
                             TextWrapping="Wrap" Height="200" VerticalAlignment="Top" FontSize="12" />
                </ScrollViewer>
            </Grid>

            <!-- Houses Section [Row 1, Col 0] -->
            <Grid Grid.Row="1"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="새 주택 후보" FontWeight="SemiBold" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="HousesList" SelectionMode="Single"
                              SelectionChanged="HousesList_SelectionChanged" />
                </ScrollViewer>
            </Grid>

            <!-- Items Section [Row 1, Col 1] -->
            <Grid Grid.Row="1" Grid.Column="1"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="새 주택 후보 매물" FontWeight="SemiBold" />
                    <Grid ColumnSpacing="8" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Type" FontWeight="SemiBold" />
                        <TextBlock Grid.Column="1" Text="Price" FontWeight="SemiBold" />
                        <TextBlock Grid.Column="2" Text="Office" FontWeight="SemiBold" />
                        <TextBlock Grid.Column="3" Text="Updated" FontWeight="SemiBold" />
                        <TextBlock Grid.Column="4" Text="Remark" FontWeight="SemiBold" />
                    </Grid>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="ItemsList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding TransactionType}" />
                                    <TextBlock Grid.Column="1" Text="{Binding PriceDisplay}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Office}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="3" Text="{Binding LastUpdatedDate}" />
                                    <TextBlock Grid.Column="4" Text="{Binding Remark}" TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>

            <!-- Related Duplicates Section [Row 1, Col 2] -->
            <Grid Grid.Row="1" Grid.Column="2"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="Existing duplicates" FontWeight="SemiBold" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="RelatedList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Display}" Foreground="Red" Padding="8" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>

            <!-- Similar Houses Section [Row 2, Col 0-2] -->
            <Grid Grid.Row="2" Grid.ColumnSpan="3"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="1" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8" Padding="12" Background="{ThemeResource LayerFillColorAltBrush}">
                    <TextBlock Text="(2) 새 주택 후보가 기존 주택에 있는지 확인 (중복이면 합치기)" FontWeight="SemiBold" />
                    <Button Content="합치기" Margin="12,0,0,0" Click="MergeSelected_Click" />
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="SimilarList" SelectionMode="Single"
                              SelectionChanged="SimilarList_SelectionChanged" />
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
